<UserControl x:Class="TrakHound.DeviceMonitor.AlarmItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrakHound.DeviceMonitor"
             mc:Ignorable="d"
             BorderBrush="{StaticResource Border}"
             BorderThickness="0,0,0,1"
             Margin="0,0,0,2"
             MinWidth="200"
             >

    <StackPanel>
        
        <!--Header-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding DataItemId}"/>
            <TextBlock Text=" : "/>
            <TextBlock Text="{Binding Condition}" FontWeight="Bold"/>
        </StackPanel>
        
        <TextBlock Text="{Binding Message}" FontSize="12"/>

        <TextBlock Text="{Binding Timestamp}" FontSize="10"/>

    </StackPanel>
    
</UserControl>
